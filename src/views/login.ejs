<!DOCTYPE html>
<html lang="pt-br">

<%- include('layout/header', {title: 'Login' }); %>
    <style>
        p {
            margin: 0
        }

        .login-form {
            width: 400px;
            border: 1px solid rgba(0, 0, 0, 0.4);
            border-radius: 3px;
            padding: 2% 5% 2% 5%;
            margin-top: 5%;
        }

        .divider {
            width: 100%;
            height: 2px;
            background-color: rgb(210, 190, 228);
            margin-bottom: 4%;
        }
    </style>

    <body class="bg-dark-subtle">

        <div class="container-md">
            <div class="center-box">
                <div class="login-form">
                    <div>
                        <p style="padding:0">Faça Login utilizando usuário e senha.</p>
                        <div class="divider" />
                    </div>
                    <form method="post" accept-charset="utf-8" role="form" action="/login">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label class="form-label" for="cpf">Usuário</label>
                            <input type="text" name="login" class="form-control border-dark" placeholder="Estudante"
                                id="login">
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label" for="senha">Senha</label>
                            <input type="password" name="password" class="form-control border-dark" placeholder="Senha"
                                id="password">

                        </div>
                        <div class="form-group  d-flex justify-content-end">
                            <button type="submit" class="btn btn-success mb-3 mt-3">Entrar</button>
                        </div>



                    </form>

                    <div class="form-group d-flex justify-content-end">
                        <a class="icon-link icon-link-hover" href="#" data-bs-toggle="modal"
                            data-bs-target="#modal-cadastro">
                            Novo Usuário
                        </a>
                    </div>

                    <% if(typeof error !=='undefined' && error==true) { %>
                        <div class="alert alert-danger mt-3" role="alert">
                            Usuário ou senha incorreto!
                        </div>
                        <% } %>

                            <% if(typeof created !=='undefined' && created==true) { %>
                                <div class="alert alert-success mt-3" role="alert">
                                    Usuário criado com sucesso!
                                </div>
                                <% } %>
                </div>
            </div>
        </div>

        <%- include('layout/modal',{newUser: true,}) %>
    </body>

</html>